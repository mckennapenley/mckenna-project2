<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>

    <title>Index</title>
  </head>

  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="row">
      <% videos.forEach(video => { %>
      <div class="col-md-6">
        <div class="card text-center">
          <div class="card-body">
            <div class="card-title text-center">
              <a class="display-6" href="/videos/<%=video._id; %>">
                <%= video.title; %>
              </a>
            </div>
            <iframe
              width="560"
              height="315"
              src="<%= video.url %>"
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
            <p class="card-text">votes: <%=video.votes%></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
