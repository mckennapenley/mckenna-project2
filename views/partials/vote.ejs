<script>
  // using upvote class, create an onclick ajax call

  $(".upvote").on("click", function (e) {
    const videoId = e.currentTarget.id;
    e.stopPropagation();
    e.stopImmediatePropagation();
    e.preventDefault();
    $.ajax({
      url: `/videos/${videoId}/vote`,
      type: "PUT",
      success: function (data) {
        console.log("success!!!!");
        $(`#${videoId}`).html("YOU UPVOTED");
      },
      error: function () {
        $("div").html("Sorry, an error occurred");
      },
    });
  });

  // Ajax call will PUT request to an endpoint in your server.js
  // Server.js will increment the database as needed and return a 200 (success)
  // Ajax will ".then" will receive (hopefully) a 200 and increment the upvote count in the view
</script>
